{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true,
    },
  },
  "rules": {
    "global-require": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "arrow-parens": 0,
    "react/no-typos": 0,
    "import/extensions": 0,
    "import/no-named-default": 0,
    "no-undef": 1,
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "babel",
    "jest"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["node_modules", "src", "test", "test/jest"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true,
    "jest": true,
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__CLIENT__": true,
    "__SERVER__": true
  }
}
